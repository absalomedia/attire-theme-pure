{% extends "master.twig" %}
{% block content %}

<div id="layout">
    <!-- Menu toggle -->
    <a href="#menu" id="menuLink" class="menu-link">
        <!-- Hamburger icon -->
        <span></span>
    </a>

    <div id="menu">
        <div class="pure-menu">
            <a class="pure-menu-heading" href="#">{{page.title|title}}</a>
            <a class="pure-menu-heading" href="#"><small>{{page.subtitle}}</small></a>

            <ul class="pure-menu-list">
            	{% include 'components/navigation.twig' %}
            </ul>
        </div>
    </div>

    <div id="main">
        {% for view,params in views %}
			{% include view with params %}
		{% endfor %}
    </div>
</div>
{% endblock %}